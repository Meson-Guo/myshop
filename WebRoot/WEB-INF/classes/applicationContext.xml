<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop.xsd
	http://www.springframework.org/schema/tx 
	http://www.springframework.org/schema/tx/spring-tx.xsd">
	
		<!-- 配置连接池: -->
	<!-- 引入外部属性文件 -->
	<context:property-placeholder location="classpath:jdbc.properties"/>
	<!-- 配置C3P0连接池: -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="${jdbc.driver}"/>
		<property name="jdbcUrl" value="${jdbc.url}"/>
		<property name="user" value="${jdbc.user}"/>
		<property name="password" value="${jdbc.password}"/>
	</bean>
		<!-- Hibernate的相关信息 -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<!-- 注入连接池 -->
		<property name="dataSource" ref="dataSource"/>
		<!-- 配置Hibernate的其他的属性 -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.format_sql">true</prop>
				<prop key="hibernate.connection.autocommit">false</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
		<!-- 配置Hibernate的映射文件 -->
		<property name="mappingResources">
			<list>
				<value>com/gzq/shop/user/vo/User.hbm.xml</value>
				<value>com/gzq/shop/category/vo/Category.hbm.xml</value>
				<value>com/gzq/shop/product/vo/Product.hbm.xml</value>
				<value>com/gzq/shop/categorysecond/vo/CategorySecond.hbm.xml</value>
				<value>com/gzq/shop/order/vo/Order.hbm.xml</value>
				<value>com/gzq/shop/order/vo/OrderItem.hbm.xml</value>
				<value>com/gzq/shop/adminuser/vo/AdminUser.hbm.xml</value>
			</list>
		</property>
		
	</bean>
	<!-- 事务管理器 -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<!-- 开启注解事务 -->
	<tx:annotation-driven transaction-manager="transactionManager"/>
		<!-- 配置action-->
		<!--配置首页访问的action  -->
	<bean id="indexAction" class="com.gzq.shop.index.action.IndexAction" scope="prototype">
		<property name="categoryService" ref="categoryService"/>
		<property name="productService" ref="productService"/>
	</bean>
	<!--配置用户Action  -->
	<bean id="userAction" class="com.gzq.shop.user.action.UserAction" scope="prototype">
	<property name="userService" ref="userService"/>
	</bean>
	<bean id="categoryAction" class="com.gzq.shop.category.action.CategoryAction" scope="prototype">
	<property name="categoryService" ref="categoryService"/>
	</bean>
	<!--  product-->
	<bean id="productAction" class="com.gzq.shop.product.action.ProductAction" scope="prototype">
	<property name="productService" ref="productService"/>
	</bean>
	<!-- 配置service -->
	<bean id="userService" class ="com.gzq.shop.user.service.UserService" >
	<property name="userDao" ref="userDao"/>
	</bean>
	<bean id="categoryService" class ="com.gzq.shop.category.service.CategoryService" >
	<property name="categoryDao" ref="categoryDao"/>
	</bean>
	
	<bean id="categorySecondService" class ="com.gzq.shop.categorysecond.service.CategorySecondService" >
	<property name="categorySecondDao" ref="categorySecondDao"/>
	</bean>
	
	<bean id="productService" class ="com.gzq.shop.product.service.ProductService" >
	<property name="productDao" ref="productDao"/>
	</bean>
	
	<bean id="orderService" class="com.gzq.shop.order.service.OrderService">
	<property name="orderDao" ref="orderDao"></property>
	</bean> 
	<bean id="adminUserService" class="com.gzq.shop.adminuser.service.AdminUserService">
	<property name="adminUserDao" ref="adminUserDao"></property>
	</bean> 
	<!--配置Dao  -->
	<bean id="userDao" class="com.gzq.shop.user.dao.UserDao" >
	<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="categoryDao" class="com.gzq.shop.category.dao.CategoryDao" >
	<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	
	<bean id="categorySecondDao" class="com.gzq.shop.categorysecond.dao.CategorySecondDao" >
	<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="productDao" class="com.gzq.shop.product.dao.ProductDao" >
	<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="orderDao" class="com.gzq.shop.order.dao.OrderDao">
	<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="adminUserDao" class="com.gzq.shop.adminuser.dao.AdminUserDao">
	<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<!-- 配置验证码Action -->
	<bean id="checkImgAction" class="com.gzq.shop.user.action.CheckImgAction" scope="prototype">	
	</bean>
	
	<bean id="cartAction" class="com.gzq.shop.cart.action.CartAction" scope="prototype">
	<property name="productService" ref="productService"></property>
	</bean>
	
	<bean id="orderAction" class="com.gzq.shop.order.action.OrderAction" scope="prototype">
	<property name="orderService" ref="orderService"></property>
	</bean>
	<bean id="adminUserAction" class="com.gzq.shop.adminuser.action.AdminUserAction" scope="prototype">
	<property name="adminUserService" ref="adminUserService"></property>
	</bean>
	<!--后台一级管理action  -->
	<bean id="adminCategoryAction" class="com.gzq.shop.category.adminaction.AdminCategoryAction" scope="prototype">
	<property name="categoryService" ref="categoryService"></property>
	</bean>
		<!--后台二级管理action  -->
	<bean id="adminCategorySecondAction" class="com.gzq.shop.categorysecond.adminaction.AdminCategorySecondAction" scope="prototype">
	<property name="categorySecondService" ref="categorySecondService"></property>
		<property name="categoryService" ref="categoryService"></property>
	</bean>
	<!--后台订单管理action  -->
	<bean id="adminOrderAction" class="com.gzq.shop.order.adminaction.AdminOrderAction" scope="prototype">
	<property name="orderService" ref="orderService"></property>
	</bean>
	
	<!--后台物品管理action  -->
	<bean id="adminProductAction" class="com.gzq.shop.product.adminaction.AdminProductAction" scope="prototype">
	<property name="productService" ref="productService"></property>
	<property name="categorySecondService" ref="categorySecondService"></property>
	</bean>
	
	<!--后台用户管理action  -->
		<bean id="userAdminAction" class="com.gzq.shop.user.adminaction.UserAdminAction">
		<property name="userService" ref="userService"></property>
		</bean>
</beans>
